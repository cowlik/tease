- var page = current.path[0]

script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")

if environment == "production"
    script(src="/js/tease.min.js")

    if page == "index"
        script(src="/js/home.min.js")

    else if page == "contact"
        script(src="/js/contact.min.js")

    else if page == "services"
        script(src="/js/services.min.js")
else
    script(src="/js/tease.js")

    if page == "index"
        script(src="/js/home.js")

    else if page == "contact"
        script(src="/js/contact.js")

    else if page == "services"
        script(src="/js/services.js")

if page == "index" | page == "contact"
    script(src="https://maps.googleapis.com/maps/api/js?v=#{google.maps.api.version}&key=#{google.maps.api.key}&callback=initMap", async, defer)