- var tel = phone.replace(/\./g, "")

section.layers
    div.layer-back
    div.layer-front
        div.layer-rule
            != partial("_shared/rule")
        div.layer-front-content
            h1 Contact
            div#info
                div.layer-rule.layer-rule-bottom
                    != partial("_shared/rule")
                div#info-content
                    p 5325 Ballard Ave NW #212
                        br 
                        | Seattle, WA 98107
                    div
                        a(href="tel:#{tel}", onclick="ga('send', 'event', 'Contact - Phone', 'Click', '#{phone}');")= phone
                        br
                        a(href="mailto:#{email.melissa}", onclick="ga('send', 'event', 'Contact - Email - Melissa', 'Click', '#{email.melissa}');") Melissa
                    br
                    a(href="/find", target="_blank", class="button", onclick="ga('send', 'event', 'Contact - Find', 'Click', '#{google.maps.directions.url}');") Get Directions
            div#hours
                div.layer-rule
                    != partial("_shared/rule")
                h2 Hours:
                div.layer-rule.layer-rule-bottom
                    != partial("_shared/rule")
                ul
                    li 
                        span Sunday -
                        |&nbsp;Closed
                    li
                        span Monday -
                        |&nbsp;Closed
                    li
                        span Tuesday -
                        |&nbsp;12pm - 7pm
                    li
                        span Wednesday -
                        |&nbsp;11am - 7pm
                    li
                        span Thursday -
                        |&nbsp;11am - 7pm
                    li
                        span Friday -
                        |&nbsp;11am - 7pm
                    li
                        span Saturday -
                        |&nbsp;11am - 6pm
        div#map